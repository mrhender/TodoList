<h1>Todo lists</h1>


<% @lists.each do |list| %>
<div class="list" id="<% dom_id(list) %>">
  <h2><%= list.title %></h2>
  <p><%= list.description %></p>
  <ul class="functions">
    <li><%= link_to "List Items", list_items_path(list) %></li>
    <li><%= link_to 'Show', list %></li>
    <li><%= link_to 'Edit', edit_list_path(list) %></li>
    <li><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>
  <br class="clear" />
</div>
<% end %>

<br>

